{
    "manifest_version": 2,
    "name": "Pomodoro radio timer",
    "description": "Pomodoro timer that plays music from freecodecamp radio",
    "version": "1.0",
    "permissions": ["activeTab", "storage"],
    "background": {
      "scripts": ["background.js"]
    },
    "browser_action": {
      "default_icon": "icon.png",
      "default_title": "Pomodoro radio timer",
      "default_popup": "popup.html"
    }
  }