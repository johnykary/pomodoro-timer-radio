{
    "manifest_version": 2,
    "name": "Background Music Player",
    "description": "Plays music in the background",
    "version": "1.0",
    "permissions": ["activeTab", "storage"],
    "background": {
      "scripts": ["background.js"]
    },
    "browser_action": {
      "default_icon": "icon.png",
      "default_title": "Background Music Player",
      "default_popup": "popup.html"
    }
  }